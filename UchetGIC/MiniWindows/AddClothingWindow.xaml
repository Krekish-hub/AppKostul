<Window x:Class="UchetGIC.MiniWindows.AddClothingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить спецодежду" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Тип одежды:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="TxtClothingType" Margin="5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Дата выдачи:" VerticalAlignment="Center" Margin="5"/>
        <DatePicker Grid.Row="1" Grid.Column="1" Name="DpIssueDate" Margin="5"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Состояние:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="2" Grid.Column="1" Name="TxtCondition" Margin="5"/>

        <Button Grid.Row="3" Grid.ColumnSpan="2" Content="Сохранить" HorizontalAlignment="Center" Margin="5" Click="BtnSave_Click"/>
    </Grid>
</Window>
